<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD"
    android:padding="24dp"
    tools:context=".RegistroActivity">

    <TextView
        android:id="@+id/txtUnete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="¡Únete a LogoDix!"
        android:textAlignment="center"
        android:textColor="#B35CE7"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtRegistroNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu nombre"
        android:inputType="textPersonName"
        android:padding="14dp"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="#5C6BC0"
        android:textColor="#333333" />

    <EditText
        android:id="@+id/txtRegistroCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu correo"
        android:inputType="textEmailAddress"
        android:padding="14dp"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="#5C6BC0"
        android:textColor="#333333" />

    <EditText
        android:id="@+id/txtRegistroPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu contraseña"
        android:inputType="textPassword"
        android:padding="14dp"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="#5C6BC0"
        android:textColor="#333333" />

    <EditText
        android:id="@+id/txtConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirma tu contraseña"
        android:inputType="textPassword"
        android:padding="14dp"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/editbox_background"
        android:textColorHint="#5C6BC0"
        android:textColor="#333333" />

    <Button
        android:id="@+id/btnCreaCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#BD7CE6"
        android:fontFamily="casual"
        android:padding="14dp"
        android:text="Crea tu cuenta"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />
</LinearLayout>
